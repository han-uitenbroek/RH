##     --------------------------                      ----------RH-- ##

CC       = gcc
CFLAGS   = -O2  -I../
##CFLAGS   = -g  -I../

ifneq ("$(wildcard /usr/include/tirpc)","")
    CFLAGS += -I/usr/include/tirpc
    TIRPC = 1
endif

LD       = gcc
LDFLAGS  = -O2  -L../
##LDFLAGS  = -g  -L../


#      --                                              -------------- ##

ARCHLIBS = -lm -lpthread

ifeq ($(TIRPC), 1)
 ARCHLIBS += -ltirpc
endif

ARCHINC  = 


## --- If no FORTRAN compiler is available remove -lrh_f90 in following

      LIBS = -lrh -lrh_f90 $(ARCHLIBS)

## ---                                                 -------------- ##

